{
  "editor.formatOnSave": true,
  "flow.useNPMPackagedFlow": true,
  "prettier.trailingComma": "all",
  "javascript.validate.enable": false,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "*.log": true,
    "**/lib": true
  },
  "eslint.enable": true,
  "eslint.workingDirectories": [
    "./package/core"
  ]
}